
<div class="card border-success mb-3 p-3" style="max-width: 50rem;">
    <%= form_with model: todo, local: true do |f| %>
        <%= f.label :description %>
        <%= f.text_field :description %>

        <%= f.label :completed %>
        <%= f.check_box :completed %>

        <%= f.submit 'Enviar'%>
    <% end %>
</div>